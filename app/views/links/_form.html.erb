<%= simple_form_for @link do |f| %>

  <div class="form-group">
    <%= f.input :title, input_html: { class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.input :url, input_html: { class: "form-control"} %>
  </div>
  <br>
  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-lg btn-primary" %>
  </div>

<% end %>
